@*@model EnglishTrainer.ApplicationCore.Models.VerbViewModel*@

@{
    ViewData["Title"] = "Index";
}

<div style="margin-bottom:20px">
    <h1>Здесь вы можете проверить свой уровень знаний!</h1>
    <a asp-action="Index" asp-controller="Home" class="btn btn-info">На главную страницу</a>
    <button id="createWord" class="btn btn-primary">Следующий</button>
    <button id="checkAnswer" class="btn btn-warning">Проверить</button>
</div>


<div class="container">
        <div class="partialResultVerb">

        </div>
</div>

@section Scripts {
    <script>
       $('#createWord').on('click', function (e) {
                e.preventDefault();
                 $.ajax({
                    url: "/Tests/GetNewVerb",
                    type: "GET",
                    dataType: "html",
                    contentType: 'application/json; charset=utf-8',
                    success: function(data){ 
                        //var message = data.Message; 
                        //alert(data);
                        $('.partialResultVerb').html(data);
                        } //<-- added close for anonymous function
                    }); //<--added close/semicolon for ajax function
            });
    </script>

    <script>
        $('#checkAnswer').on('click', function (e) {
            const checkPastSimple = document.getElementById("checkPastSimple").value;
            const checkPastParticiple = document.getElementById("checkPastParticiple").value;

            const answerPastSimple = document.getElementById("answerPastSimple").value;
            const answerPastParticiple = document.getElementById("answerPastParticiple").value;

            const pastSimpleInput = document.getElementById("answerPastSimple");
            const pastParticipleInput = document.getElementById("answerPastParticiple");

            if(checkPastSimple != answerPastSimple){
                document.querySelector('.result-answer-past-simple').innerHTML = 'Неправильно!';
                document.querySelector('.result-answer-past-simple').classList.add('text-danger');
                pastSimpleInput.style.backgroundColor = '#fa9bab';
            }
            else{
                document.querySelector('.result-answer-past-simple').innerHTML = 'Правильно!';
                document.querySelector('.result-answer-past-simple').classList.add('text-success');
                pastSimpleInput.style.backgroundColor = '#7df279';
            }

            if (checkPastParticiple != answerPastParticiple){
                document.querySelector('.result-answer-past-participle').innerHTML = 'Неправильно!';
                document.querySelector('.result-answer-past-participle').classList.add('text-danger');
                pastParticipleInput.style.backgroundColor = '#fa9bab';
            }
            else{
                document.querySelector('.result-answer-past-participle').innerHTML = 'Правильно!';
                document.querySelector('.result-answer-past-participle').classList.add('text-success');
                pastParticipleInput.style.backgroundColor = '#7df279';
            }

        });
    </script>

    <script>
        $(document).keypress(function (e) {
            if (e.which == 13) {
                document.getElementById("checkAnswer").click();
                document.getElementById("my-input").value = "";
                alert("Pressed");
            }
        });
    </script>

