@model EnglishTrainer.ApplicationCore.Models.ExampleViewModel

@{
    ViewData["Title"] = "ConfirmDelete";
}

<h1>ConfirmDelete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>ExampleViewModel</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.WordId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.WordId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EnglishExample)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EnglishExample)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RussianExample)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RussianExample)
        </dd>
    </dl>
    
    <form asp-action="ConfirmDelete">
        <input type="submit" asp-action="Delete" asp-controller="Example" asp-route-id = "@Model.Id" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Details" asp-controller="Word" asp-route-wordId="@Model.WordId">Back to List</a>
    </form>
</div>
