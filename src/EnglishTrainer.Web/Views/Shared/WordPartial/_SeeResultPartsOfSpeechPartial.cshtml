@model EnglishTrainer.ApplicationCore.Models.WordViewModel

<div>
    @if (Model.PartsOfSpeech is not null)
    {
        <div>
            @if (Model.PartsOfSpeech.Noun is not null)
            {
                <span style="font-weight:700;">Существительное - </span> @Model.PartsOfSpeech.Noun <br>
            }
            @if (@Model.PartsOfSpeech.Verb is not null)
            {
                <span style="font-weight:700;">Глагол - </span> @Model.PartsOfSpeech.Verb

                <br>
            }
            @if (@Model.PartsOfSpeech.Adjective is not null)
            {
                <span style="font-weight:700;">Прилагательное - </span> @Model.PartsOfSpeech.Adjective

                <br>
            }
            @if (@Model.PartsOfSpeech.Adverb is not null)
            {
                <span style="font-weight:700;">Наречие - </span> @Model.PartsOfSpeech.Adverb

                <br>
            }
            @if (@Model.PartsOfSpeech.Pronoun is not null)
            {
                <span style="font-weight:700;">Местоимение - </span> @Model.PartsOfSpeech.Pronoun

                <br>
            }
            @if (@Model.PartsOfSpeech.Conjunction is not null)
            {
                <span style="font-weight:700;">Соединение - </span> @Model.PartsOfSpeech.Conjunction

                <br>
            }
            @if (@Model.PartsOfSpeech.Preposition is not null)
            {
                <span style="font-weight:700;">Предлог - </span> @Model.PartsOfSpeech.Preposition

                <br>
            }
            @if (@Model.PartsOfSpeech.Interjection is not null)
            {
                <span style="font-weight:700;">Междометие - </span> @Model.PartsOfSpeech.Interjection

                <br>
            }
        </div>
    }

</div>