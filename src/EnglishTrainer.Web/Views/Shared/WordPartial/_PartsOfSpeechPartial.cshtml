@model EnglishTrainer.ApplicationCore.Models.WordViewModel



<div class="container">

    <div class="d-flex flex-row bd-highlight mb-3">
        <div class="p-2 bd-highlight">
            <label asp-for="PartsOfSpeech.Adjective" class="control-label">Adjective/Прилагательное</label>
            <input asp-for="PartsOfSpeech.Adjective" class="form-control" placeholder="..." />
            <span asp-validation-for="PartsOfSpeech.Adjective" class="text-danger"></span>
        </div>
        <div class="p-2 bd-highlight">
            <label asp-for="PartsOfSpeech.Adverb" class="control-label">Adverb/Наречие</label>
            <input asp-for="PartsOfSpeech.Adverb" class="form-control" placeholder="..." />
            <span asp-validation-for="PartsOfSpeech.Adverb" class="text-danger"></span>
        </div>
        <div class="p-2 bd-highlight">
            <label asp-for="PartsOfSpeech.Conjunction" class="control-label">Conjunction/Союз</label>
            <input asp-for="PartsOfSpeech.Conjunction" class="form-control" placeholder="..." />
            <span asp-validation-for="PartsOfSpeech.Conjunction" class="text-danger"></span>
        </div>
        <div class="p-2 bd-highlight">
            <label asp-for="PartsOfSpeech.Noun" class="control-label">Noun/Существительное</label>
            <input asp-for="PartsOfSpeech.Noun" class="form-control" placeholder="..." />
            <span asp-validation-for="PartsOfSpeech.Noun" class="text-danger"></span>
        </div>
    </div>

    <div class="d-flex flex-row bd-highlight mb-3">
        <div class="p-2 bd-highlight">
            <label asp-for="PartsOfSpeech.Interjection" class="control-label">Interjection/Междометие</label>
            <input asp-for="PartsOfSpeech.Interjection" class="form-control" placeholder="..." />
            <span asp-validation-for="PartsOfSpeech.Interjection" class="text-danger"></span>
        </div>
        <div class="p-2 bd-highlight">
            <label asp-for="PartsOfSpeech.Verb" class="control-label">Verb/Глагол</label>
            <input asp-for="PartsOfSpeech.Verb" class="form-control" placeholder="..." />
            <span asp-validation-for="PartsOfSpeech.Verb" class="text-danger"></span>
        </div>
        <div class="p-2 bd-highlight">
            <label asp-for="PartsOfSpeech.Preposition" class="control-label">Preposition/Предлог</label>
            <input asp-for="PartsOfSpeech.Preposition" class="form-control" placeholder="..." />
            <span asp-validation-for="PartsOfSpeech.Preposition" class="text-danger"></span>
        </div>
        <div class="p-2 bd-highlight">
            <label asp-for="PartsOfSpeech.Pronoun" class="control-label">Pronoun/Междометие</label>
            <input asp-for="PartsOfSpeech.Pronoun" class="form-control" placeholder="..." />
            <span asp-validation-for="PartsOfSpeech.Pronoun" class="text-danger"></span>
        </div>
    </div>
</div>


