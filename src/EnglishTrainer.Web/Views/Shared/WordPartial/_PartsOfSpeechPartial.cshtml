@model EnglishTrainer.ApplicationCore.Entities.TranslateByPartsOfSpeech



<div class="container">

    <div class="d-flex flex-row bd-highlight mb-3">
        <div class="p-2 bd-highlight">
            <label asp-for="Adjective" class="control-label">Adjective/Прилагательное</label>
            <input asp-for="Adjective" class="form-control" placeholder="..." />
            <span asp-validation-for="Adjective" class="text-danger"></span>
        </div>
        <div class="p-2 bd-highlight">
            <label asp-for="Adverb" class="control-label">Adverb/Наречие</label>
            <input asp-for="Adverb" class="form-control" placeholder="..." />
            <span asp-validation-for="Adverb" class="text-danger"></span>
        </div>
        <div class="p-2 bd-highlight">
            <label asp-for="Conjunction" class="control-label">Conjunction/Союз</label>
            <input asp-for="Conjunction" class="form-control" placeholder="..." />
            <span asp-validation-for="Conjunction" class="text-danger"></span>
        </div>
        <div class="p-2 bd-highlight">
            <label asp-for="Noun" class="control-label">Noun/Существительное</label>
            <input asp-for="Noun" class="form-control" placeholder="..." />
            <span asp-validation-for="Noun" class="text-danger"></span>
        </div>
    </div>

    <div class="d-flex flex-row bd-highlight mb-3">
        <div class="p-2 bd-highlight">
            <label asp-for="Interjection" class="control-label">Interjection/Междометие</label>
            <input asp-for="Interjection" class="form-control" placeholder="..." />
            <span asp-validation-for="Interjection" class="text-danger"></span>
        </div>
        <div class="p-2 bd-highlight">
            <label asp-for="Verb" class="control-label">Verb/Глагол</label>
            <input asp-for="Verb" class="form-control" placeholder="..." />
            <span asp-validation-for="Verb" class="text-danger"></span>
        </div>
        <div class="p-2 bd-highlight">
            <label asp-for="Preposition" class="control-label">Preposition/Предлог</label>
            <input asp-for="Preposition" class="form-control" placeholder="..." />
            <span asp-validation-for="Preposition" class="text-danger"></span>
        </div>
        <div class="p-2 bd-highlight">
            <label asp-for="Pronoun" class="control-label">Pronoun/Междометие</label>
            <input asp-for="Pronoun" class="form-control" placeholder="..." />
            <span asp-validation-for="Pronoun" class="text-danger"></span>
        </div>
    </div>
</div>


