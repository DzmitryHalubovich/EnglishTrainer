@model EnglishTrainer.Web.Models.VerbIndexViewModel

@{
    ViewData["Title"] = "MainTable";
}

<div class="back-to-main-page-button">
    <a asp-action="MainPage" asp-controller="Verb" class="btn btn-info">Back to main page</a>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                Infinitive
            </th>
            <th>
                PastSimple
            </th>
            <th>
                PastParticiple
            </th>
            <th>
                TranslateRu
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.VerbsList)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Infinitive)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PastSimple)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PastParticiple)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TranslateRu)
            </td>
        </tr>
}
        <form method="get">
            <input type="hidden" name="pageOptions.CurrentPage" value="@(Model.Options.PageOptions.CurrentPage - 1)" />
            @if (Model.Options.PageOptions.HasPreviousPage)
            {
                <input class="btn btn-outline-info" type="submit" value="Previous page" />
            }
            else
            {
                <input class="btn btn-info" disabled type="submit" value="Previous page" />
            }
        </form>
        <form method="get">
            <input type="hidden" name="pageOptions.CurrentPage" value="@(Model.Options.PageOptions.CurrentPage + 1)" />
            @if (Model.Options.PageOptions.HasNextPage)
            {
                <input class="btn btn-outline-info" type="submit" value="Next page" />
            }
            else
            {
                <input class="btn btn-info" disabled type="submit" value="Next page" />
            }
        </form>
            </tbody>

</table>

