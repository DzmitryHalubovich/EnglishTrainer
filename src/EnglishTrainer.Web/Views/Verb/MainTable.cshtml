@model IEnumerable<EnglishTrainer.Web.Models.VerbViewModel>

@{
    ViewData["Title"] = "MainTable";
}

<h1>MainPage</h1>

<p>
    <a asp-action="MainPage" asp-controller="Verb">Back to main page</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Infinitive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PastSimple)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PastParticiple)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TranslateRu)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Infinitive)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PastSimple)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PastParticiple)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TranslateRu)
            </td>
        </tr>
}
    </tbody>
</table>
