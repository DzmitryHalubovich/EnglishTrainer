@using EnglishTrainer.ApplicationCore.Entities;
@model EnglishTrainer.ApplicationCore.Models.WordViewModel


@{
    ViewData["Title"] = "Create";
}

<h1>Новое слово</h1>

<form id = "createNewWordForm" style="min-height:1200px;">

    <div class="create-word-menu">
        <div class="create-word-menu_header">
            <h1 class="create-word-menu_header_text">Новое слово</h1>
        </div>
        <div class="create-word-menu_top"> 
            <div class="create-word-menu_top_translation">

                <div class="create-word-menu_top_translation_block">
                    <div class="create-word-menu_top_translation_label_block">
                        <label class="create-word-menu_top_translation_label_block_text">Слово</label>
                    </div>
                    <div class="create-word-menu_top_translation_label_block">
                        <input asp-for="Name" class="create-word-menu_top_translation_input" />
                    </div>
               </div>

               <div class="create-word-menu_top_translation_block">
                    <div class="create-word-menu_top_translation_label_block">
                       <label class="create-word-menu_top_translation_label_block_text">Варианты перевода</label>
                   </div>
                   <div class="create-word-menu_top_translation_label_block">
                        <input asp-for="TranslateVariants" class="create-word-menu_top_translation_input" />
                   </div>
               </div>

            </div>

            <div class="create-word-menu_top_translation_description">
                <div class="create-word-menu_top_translation_description_block_textarea">
                    <div class="create-word-menu_top_translation_label_block_text">Описание</div>
                    <div class="form-floating">
                        <textarea class=" create-word-menu_top_translation_description_block_textarea_field" asp-for="Description"  id="floatingTextarea"></textarea>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="form-group">
        <label class="form-label">Слово</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div>
        <label class="form-label">Варианты перевода</label>
        <input asp-for="TranslateVariants" class="form-control" />
    </div>
    
    <div class="form-floating" style="margin-bottom:20px; margin-top: 10px;">
        <textarea class="form-control" asp-for="Description" placeholder="Определение" id="floatingTextarea"></textarea>
        <label for="floatingTextarea">Определение (необязательно)</label>
    </div>
