@model EnglishTrainer.Services.Models.IndexWordsViewModel

@{
    ViewData["Title"] = "MainTable";
    string prevPage = "Предыдущая страница";
}

<h1>Словарь</h1>

<div style="width: 700px; margin:auto;">
    <h6>Навигация</h6>
    <div>
        <div>
            <a type="button" class="btn btn-info" asp-action="Index" asp-controller="Home">На главную страницу</a>
            <a type="button" class="btn btn-primary" asp-action="Create" asp-controller="Word">Добавить новое слово </a>
        </div>

        <div style="display:flex; background-color: #3b375e;">
            <div>
                <form method="get">
                    <input type="hidden" name="PageNum" value="@(Model.SortFilterPageData.PageNum-1)" />
                    @if (Model.SortFilterPageData.HasPrevPage())
                    {
                        <input class="btn btn-light" type="submit" value=@prevPage/>
                    }
                    else
                    {
                        <input class="btn btn-light" disabled type="submit" value=@prevPage />
                    }
                </form>
            </div>
            <div>
                <form method="get">
                    <input type="hidden" name="PageNum" value="@(Model.SortFilterPageData.PageNum+1)" />
                    @if (Model.SortFilterPageData.HasNextPage(@ViewBag.PagesCount))
                    {
                        <input class="btn btn-light" type="submit" value="Следующая страница" />
                    }
                    else
                    {
                        <input class="btn btn-light" disabled type="submit" value="Следующая страница" />
                    }
                </form>
            </div>
            <div style="width:130px; margin-left:200px;">
                <p>
                    Страница: @Model.SortFilterPageData.PageNum из @ViewBag.PagesCount
                </p>
            </div>
        </div>
    </div>
</div>

<div class="container flex-column justify-content-center" style="margin:auto; width:700px; padding:0">
    @foreach(var item in Model.WordsList)
    {
        <div class="my-row" style="display:flex; justify-content:space-between; width:700px;">
            <a asp-action="Details" asp-controller="Word" asp-route-id="@item.Id" div class="text-decoration-none my-row_word">
                @item.Name - @item.TranslateVariants
            </a>
            <a data-bs-toggle="modal" class="btn btn-danger" data-bs-target="#exampleModal">Удалить</a>
        </div>

        <!-- Modal -->
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header" style="background-color:#3b375e; color:#fff;">
                        <h5 class="modal-title" id="exampleModalLabel">Удалить</h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close" ></button>
                    </div>
                    <div class="modal-body" style="background-color:#3b375e; color:#fff;">
                        Вы действительно хотите удалить слово <span style="font-weight:700; font-size:18px;">@item.Name</span>?
                    </div>
                    <div class="modal-footer" style="background-color:#3b375e; color:#fff;">
                        <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Отмена</button>
                        <a asp-action="Delete" asp-controller="Word" asp-route-id="@item.Id" class="btn btn-primary">Удалить</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts{

    <script type='text/javascript'>
        document.addEventListener("DOMContentLoaded",
            function (event) {
                WordList.initialise('@Url.Action("GetFilterSearchContent")');
            });
    </script>

}

