@model EnglishTrainer.ApplicationCore.Models.RegisterDto

<form asp-action="Register">
    <div class="register-block">
        <div style="margin:auto; width:200px;">
            <h1>Регистрация</h1>
        </div>
        <div class="form-group">
            <input asp-for="UserName" class="english-trainer-common-input" placeholder="Имя пользователя" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="Password" class="english-trainer-common-input" placeholder="Пароль" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="PasswordConfirm" class="english-trainer-common-input" placeholder="Подтвердите пароль" />
            <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="Email" class="english-trainer-common-input" placeholder="Email" html autocomplete="off" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="register-buttons-block">
            <a asp-action="Index" asp-controller="Home" class="register-buttons-block_button_cancel">Отмена</a>
            <button type="submit" class="register-buttons-block_button_submit">Зарегистрироваться</button>
        </div>
    </div>
</form>

@section Scripts{

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
}